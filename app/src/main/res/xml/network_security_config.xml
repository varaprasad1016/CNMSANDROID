<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development and specific domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Add your API domains here -->
        <domain includeSubdomains="true">neattelematics.com</domain>
        <domain includeSubdomains="true">ammancctv.com</domain>
        <!-- Video streaming domains -->
        <domain includeSubdomains="true">rtsp.neattelematics.com</domain>
        <domain includeSubdomains="true">stream.ammancctv.com</domain>
    </domain-config>
    
    <!-- Base config for HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>